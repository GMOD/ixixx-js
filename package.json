{
  "name": "ixixx",
  "version": "2.2.3",
  "description": "JavaScript implementation of trix text indexing",
  "license": "MIT",
  "repository": "GMOD/ixixx-js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": {
      "import": "./esm/index.js"
    },
    "require": {
      "require": "./dist/index.js"
    }
  },
  "author": {
    "name": "Colin Diesh",
    "email": "colin.diesh@gmail.com",
    "url": "https://github.com/cmdcolin"
  },
  "files": [
    "dist",
    "esm",
    "src"
  ],
  "bin": {
    "ixixxjs": "./dist/bin.js"
  },
  "scripts": {
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
    "clean": "rimraf dist esm",
    "prebuild": "yarn clean",
    "build:esm": "tsc --outDir esm",
    "build:es5": "tsc --module commonjs --outDir dist",
    "build": "yarn build:esm && yarn build:es5",
    "postbuild:es5": "echo '{\"type\": \"commonjs\"}' > dist/package.json",
    "test": "vitest",
    "preversion": "yarn lint && yarn test --run && yarn build",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "command-exists": "^1.2.9",
    "external-sorting": "^1.3.1",
    "split2": "^4.1.0",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/command-exists": "^1.2.1",
    "@types/node": "^20.5.9",
    "@types/split2": "^4.2.0",
    "@types/tmp": "^0.2.3",
    "eslint": "^9.8.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "prettier": "^3.0.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1",
    "vitest": "^4.0.15"
  },
  "publishConfig": {
    "access": "public"
  }
}
